{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>Bank</th>
                <td>{{ partner.bank }}</td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ partner.iban }}</td>
            </tr>
            <tr>
                <th>Datcre</th>
                <td>{% if partner.datCre %}{{ partner.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datupd</th>
                <td>{% if partner.datUpd %}{{ partner.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('partner_edit', { 'id': partner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
